# Database
DATABASE_URL=postgresql://rss_user:rss_password@db:5432/rss_db

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration
EMAIL_ENABLED=True
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# RSS Fetch Schedule (cron format)
RSS_FETCH_SCHEDULE=0 */6 * * *  # Every 6 hours

# Summary Email Schedule (cron format)
SUMMARY_EMAIL_SCHEDULE=0 7 * * *  # Every day at 7 AM

# Number of articles to summarize
MAX_ARTICLES_TO_SUMMARIZE=10
